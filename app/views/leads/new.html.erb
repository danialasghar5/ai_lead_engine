<h1>Submit a Lead</h1>

<%= form_with model: @lead, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :message %>
    <%= f.text_area :message, class: "form-control" %>
  </div>

  <%= f.submit "Submit Lead", class: "btn btn-primary" %>
<% end %>
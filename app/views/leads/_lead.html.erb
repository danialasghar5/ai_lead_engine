<div id="<%= dom_id(lead) %>" class="card mb-2 p-3">
  <div class="d-flex justify-content-between">
    <div>
      <strong><%= lead.name %></strong> (<%= lead.email %>)
      <p><%= lead.message %></p>
    </div>
    <div>
      <span class="badge <%= lead.ai_status == 'completed' ? 'bg-success' : lead.ai_status == 'failed' ? 'bg-danger' : 'bg-secondary' %>">
        <%= lead.ai_status.capitalize %>
      </span>
    </div>
  </div>

  <% if lead.summary.present? %>
    <hr>
    <p><strong>Summary:</strong> <%= lead.summary %></p>
    <p><strong>Intent:</strong> <%= lead.intent %></p>
    <p><strong>Urgency:</strong> <%= lead.urgency %></p>
    <p><strong>Lead Score:</strong> <%= lead.lead_score %></p>
  <% end %>
</div>